<%- include("partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>This is the campgrounds page</h1>
			<p>View our hand-picked campgrounds from all over the world!</p>
			<p>
				<a href="/campgrounds/new" class="btn btn-primary btn-large">
					Add new campground
				</a>
			</p>
		</div>
	</header>

	<a href="/campgrounds/new">Add new campground</a>

	<div class="row" style="display: flex; flex-wrap: wrap;">
		<% campgrounds.forEach((campground) => {%>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%=campground.image%>" alt="" />
			</div>
			<p>
				<a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">
					More info
				</a>
			</p>
		</div>
		<%})%>
	</div>
</div>
<%- include("partials/footer") %>
