<%- include("partials/header") %>
<div class="ui main text container">
  <div class="ui huge header">
    RESTFUL Blog App
  </div>
  <div class="ui attached top segment">
    <div class="ui divided items">
      <% blogs.forEach((blog) => {%>
      <div class="item">
        <div class="image">
          <img src="<%=blog.image%>" alt="" />
        </div>
        <div class="content">
          <a href="/blogs/<%=blog._id%>" class="header"><%=blog.title%></a>
          <div class="meta">
            <p><%=blog.created.toDateString()%></p>
          </div>
          <div class="description">
            <p><%-blog.body.substring(0, 200)%>...</p>
          </div>
          <div class="extra">
            <a href="/blogs/<%=blog._id%>" class="ui floated basic violet button">
              Read More
              <i class="icon right chevron"></i>
            </a>
          </div>
        </div>
      </div>

      <%})%>
    </div>
  </div>
</div>
<%- include("partials/footer") %>
